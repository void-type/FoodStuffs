{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "./build.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$node-sass",
                "$eslint-compact",
                "$msCompile"
            ]
        },
        {
            "label": "buildDebug",
            "command": "./build.ps1 -Configuration Debug -SkipFormat -SkipOutdated -SkipTest -SkipPublish",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": "test",
            "problemMatcher": [
                "$node-sass",
                "$eslint-compact",
                "$msCompile"
            ]
        },
        {
            "label": "testClient",
            "command": "./testClient.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "testServer",
            "command": "./build.ps1 -Configuration Debug -SkipFormat -SkipOutdated -SkipClient -SkipPublish",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watchClient",
            "command": "./watchClient.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": "test",
            "problemMatcher": [
                "$node-sass",
                "$eslint-compact"
            ]
        },
        {
            "label": "watchServer",
            "command": "./watchServer.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": "test",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "watchServerTest",
            "command": "./watchServerTest.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": "test",
            "problemMatcher": "$msCompile"
        },
    ]
}
