{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "./build.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$node-sass",
                "$eslint-compact",
                "$msCompile"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "build"
            }
        },
        {
            "label": "build-debug",
            "command": "./build.ps1 -Configuration Debug -SkipFormat -SkipOutdated -SkipTest -SkipPublish",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "problemMatcher": [
                "$node-sass",
                "$eslint-compact",
                "$msCompile"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "build"
            }
        },
        {
            "label": "format",
            "command": "./format.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "problemMatcher": [
                "$node-sass",
                "$eslint-compact",
                "$msCompile"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "build"
            }
        },
        {
            "label": "test-server",
            "command": "./build.ps1 -Configuration Debug -SkipFormat -SkipOutdated -SkipClient -SkipPublish",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "build"
            }
        },
        {
            "label": "watch-test-server",
            "command": "./watchServerTest.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "watch"
            }
        },
        {
            "label": "watch-client",
            "command": "./watchClient.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "problemMatcher": [
                "$node-sass",
                "$eslint-compact"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "watch"
            }
        },
        {
            "label": "watch-server",
            "command": "./watchServer.ps1",
            "options": {
                "cwd": "./build"
            },
            "type": "shell",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "watch"
            }
        },
        {
            "label": "watch-dev",
            "dependsOn": ["watch-client", "watch-server"],
            "problemMatcher": []
        }
    ]
}
