    "/api/recipes": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Search for recipes using the following criteria. All are optional and some have defaults.",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Name contains (case-insensitive)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Category names contain (case-insensitive)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "Field name to sort by (case-insensitive). Options are: name. Default is ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sortDesc",
            "in": "query",
            "description": "True for descending sort",
            "schema": {
              "type": "boolean",
              "default": false
            }
          },
          {
            "name": "isPagingEnabled",
            "in": "query",
            "description": "False for all results",
            "schema": {
              "type": "boolean",
              "default": true
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "The page of results to retrieve",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "take",
            "in": "query",
            "description": "How many items in a page",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 30
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ListRecipesResponseIItemSet"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListRecipesResponseIItemSet"
